    <div id="map"></div>

    <script>
        function initMap() {
            var mercury = {
                lat: 51.635204, lng: -0.773945
            };

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 12,
                center: mercury
            });

            var marker = new google.maps.Marker({
                position: mercury,
                map: map,
                title: 'Mercury Safety & Security'
            });

            var infowindow = new google.maps.InfoWindow();

            marker.setMap(map);

            infowindow.setContent('<div><strong>Mercury Safety & Security</strong><br><br><div>Durston House,<br> Grafton Street,<br> High Wycombe,<br> HP12 3AJ</div><br>Tel: <strong>01494 510131</strong></div>');

            infowindow.open(map, marker);
        }
    </script>

    <script async defer
